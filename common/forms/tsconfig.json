{
    "include": [
      "**/*",
      "rollup.config.js",
      ".eslintrc.js"
    ],
    "exclude": ["dist"],
    "compilerOptions": {
        "target": "ES2020",
        "typeRoots": ["node_modules/@types"],
        "jsx": "react",
        "module": "ES2020",
        "moduleResolution": "Node16",
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true,

        /* Type Checking */
        "strict": true,
        "noImplicitAny": true
      }
  }
