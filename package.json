{
  "name": "cogo-admin",
  "version": "0.0.1",
  "description": "Turbo repo for Cogo admin",
  "repository": "git@github.com:Cogoport/cogo-admin.git",
  "author": "Prashant Paddune <padadunep@gmail.com>",
  "license": "MIT",
  "private": true,
  "workspaces": [
    "*",
    "packages/*",
    "common/*"
  ],
  "scripts": {
    "deploy": "sh ./scripts/setup-node.sh && nvm use 18 && pnpm run prod:build && (cd cogo-control && pm2 start pm2.config.js)",
    "prod:build": "pnpm run pre-build && pnpm run build",
    "build": "NODE_ENV=production turbo run build",
    "pre-build": "NODE_ENV=production node scripts/build-pages",
    "dev": "sh ./scripts/setup-node.sh && node scripts/build-pages && turbo run dev",
    "start": "turbo run start",
    "eslint": "eslint \"**/*.{js,jsx,ts,tsx}\" --fix",
    "stylelint": "stylelint \"**/*.css\" --fix",
    "clean": "turbo run clean"
  },
  "dependencies": {
    "@sentry/nextjs": "^7.32.1",
    "accept-language": "^3.0.18",
    "i18next": "^22.4.9",
    "next-i18next": "^13.0.3",
    "react-i18next": "^12.1.4"
  },
  "devDependencies": {
    "@cogoport/eslint-config": "^1.1.0",
    "@cogoport/stylelint-config": "^1.0.3",
    "@svgr/webpack": "^6.5.1",
    "eslint": "^8.32.0",
    "fs-extra": "^11.1.0",
    "postcss": "^8.4.21",
    "postcss-flexbugs-fixes": "^5.0.2",
    "postcss-nested": "^6.0.0",
    "postcss-preset-env": "^7.8.3",
    "stylelint": "^14.16.1",
    "turbo": "^1.7.0"
  },
  "packageManager": "pnpm@7.15.0"
}
