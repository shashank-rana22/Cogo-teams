{
  "name": "cogo-admin",
  "version": "0.0.1",
  "description": "Turbo repo for Cogo admin",
  "repository": "git@github.com:Cogoport/cogo-admin.git",
  "author": "Prashant Paddune <padadunep@gmail.com>",
  "license": "MIT",
  "private": true,
  "workspaces": [
    "*",
    "packages/*",
    "common/*"
  ],
  "scripts": {
    "deploy": "pnpm run prod:build && (cd cogo-control && pm2 start pm2.config.js)",
    "prod:build": "pnpm run pre-build && pnpm run build",
    "build": "NODE_ENV=production turbo run build",
    "pre-build": "NODE_ENV=production node scripts/build-pages",
    "dev": "./scripts/setup-node.sh && node scripts/build-pages && turbo run dev",
    "start": "turbo run start",
    "eslint": "eslint \"**/*.{js,jsx,ts,tsx}\"",
    "stylelint": "stylelint \"**/*.css\"",
    "clean": "turbo run clean"
  },
  "dependencies": {
    "@sentry/nextjs": "^7.38.0",
    "accept-language": "^3.0.18",
    "i18next": "^22.4.10",
    "next-i18next": "^13.1.5",
    "react-i18next": "^12.1.5"
  },
  "devDependencies": {
    "@cogoport/eslint-config": "^1.1.0",
    "@cogoport/stylelint-config": "^1.0.3",
    "@svgr/webpack": "^6.5.1",
    "eslint": "^8.34.0",
    "fs-extra": "^11.1.0",
    "git-precommit-checks": "^3.1.0",
    "husky": "^8.0.3",
    "postcss": "^8.4.21",
    "postcss-flexbugs-fixes": "^5.0.2",
    "postcss-nested": "^6.0.0",
    "postcss-preset-env": "^8.0.1",
    "stylelint": "^14.16.1",
    "turbo": "^1.7.4"
  },
  "packageManager": "pnpm@7.15.0"
}
