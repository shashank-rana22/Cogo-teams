{
    "include": [
        "packages/**/*",
        "postcss.config.js",
        ".eslintrc.js",
        ".stylelintrc.js",
        "./cogo-control/next-env.d.ts",
    ],
    "exclude": [
        "dist"
    ],
    "compilerOptions": {
        "target": "es5",
        "lib": [
            "dom",
            "dom.iterable",
            "esnext"
        ],
        "allowJs": true,
        "checkJs": false,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "noEmit": true,
        "incremental": true,
        "esModuleInterop": true,
        "module": "esnext",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "jsx": "preserve",
        "strict": false
    },
}