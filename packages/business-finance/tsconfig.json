{
    "include": [
      "page-components/**/*",
      "**/*.ts",
      "**/*.tsx",
      "rollup.config.js",
      ".eslintrc.js"
    ],
    "exclude": [    
    "dist",
    "**/*.js",
    "**/*.jsx"],
    "compilerOptions": {
        "target": "ES2020",
        "typeRoots": ["node_modules/@types"],
        "jsx": "react",
        "module": "ES2020",
        "allowJs": true,
        "checkJs": false,
        "moduleResolution": "Node16",
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true,

        /* Type Checking */
        "strict": true,
        "noImplicitAny": true
      }
  }

 

  
