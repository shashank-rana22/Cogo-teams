{
  "include": [
    "next-env.d.ts",
    "page-components/**/*",
    "**/*.ts",
    "**/*.tsx",
    "**/*.js",
    "rollup.config.js",
    ".eslintrc.js"
  ],
  "compilerOptions": {
      "target": "ES2020",
      "typeRoots": ["node_modules/@types"],
      "jsx": "react",
      "module": "ES2020",
      "moduleResolution": "Node16",
      "allowSyntheticDefaultImports": true,
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true,
      "resolveJsonModule": true,

      /* Type Checking */
      "strict": true,
      "noImplicitAny": true
    }
}