{
    "include": [
      "**/*.ts",
      "**/*.tsx",
      "rollup.config.js",
      ".eslintrc.js"
    ],
    "exclude": [
      "dist",
      "**/*.js",
      "**/*.jsx"
    ],
    "compilerOptions": {
        "target": "ES2020",
        "typeRoots": ["node_modules/@types"],
        "jsx": "react",
        "allowJs": true,
        "checkJs": false,
        "module": "ES2020",
        "moduleResolution": "Node16",
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true,

        /* Type Checking */
        "strict": true,
        "noImplicitAny": true
      },


  }
